{
    "name": "api",
    "main": "main.ts",
    "version": "1.0.0",
    "private": true,
    "license": "MIT",
    "scripts": {
        "build": "tsc --project tsconfig.json",
        "dev": "node -r dotenv/config build/main.js dotenv_config_path=../.env",
        "dev:build": "yarn build && yarn dev",
        "start": "NODE_ENV=prod node build/main.js",
        "lint": "eslint ./src --ext .ts",
        "prebuild": "yarn lint",
        "build:watch": "tsc -w -p tsconfig.json",
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:watch": "jest --watch",
        "fmt": "prettier --write .",
        "protoc-ts": "cd src && protoc --plugin=protoc-gen-ts=../node_modules/.bin/protoc-gen-ts --ts_out=./ ./proto/*.proto",
        "protoc": "cd src && grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./ --grpc_out=grpc_js:./ ./proto/*.proto"
    },
    "dependencies": {
        "@cainance/db": "workspace:*",
        "@cainance/protobuf": "workspace:*",
        "@grpc/grpc-js": "^1.6.1",
        "@msgpack/msgpack": "^2.7.2",
        "cookie-parser": "~1.4.4",
        "cors": "^2.8.5",
        "debug": "~2.6.9",
        "dotenv": "^16.0.3",
        "express": "~4.16.1",
        "google-protobuf": "^3.20.0",
        "grpc-tools": "^1.11.2",
        "grpc_tools_node_protoc_ts": "^5.3.2",
        "http-errors": "~1.6.3",
        "joi": "^17.6.2",
        "jsonwebtoken": "^8.5.1",
        "kafkajs": "2.2.0",
        "md5": "^2.3.0",
        "mongoose": "^6.6.5",
        "morgan": "~1.9.1",
        "node-2fa": "^2.0.3",
        "query-string": "^7.1.1",
        "redis": "^4.0.6",
        "sequelize": "^6.24.0",
        "socket.io": "^4.4.1",
        "socket.io-msgpack-parser": "^3.0.1",
        "tslib": "^2.3.1",
        "ws": "^8.10.0"
    },
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.23",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "eslint": "^8.12.0",
        "eslint-plugin-jest": "^26.1.3",
        "jest": "^27.5.1",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "socket.io-client": "^4.4.1",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3"
    }
}
