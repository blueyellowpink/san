{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "baseUrl": "src",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "isolatedModules": true
    },
    "include": ["index.ts", "src/**/*.ts", "src/**/*.js"],
    "exclude": ["node_modules"],
    "moduleResolution": "node"
}
